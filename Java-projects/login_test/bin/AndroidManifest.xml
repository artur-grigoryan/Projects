<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidhive"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.login.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name="com.example.login.Login"
            android:label="Login Account" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name="com.example.login.Register"
            android:label="Register New Account" >
        </activity>
        
        <!-- Send Message Activity -->
        <activity
            android:name="com.example.login.SendMessage"
            android:label="Sending Message" >
        </activity>
        
        <!-- Send Message Activity -->
        <activity
            android:name="com.example.login.ReplyMessage"
            android:label="Sending Message" >
        </activity>
        
        <!-- Load Inbox Activity -->
        <activity
            android:name="com.example.login.GetMessages"
            android:label="Messages Inbox" >
        </activity>
        
        <!-- Get Sent Messages Activity -->
        <activity
            android:name="com.example.login.GetSentMessages"
            android:label="Sent Messages" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.example.androidhive.SendMessage"
            android:label="@string/title_activity_send_message" >
        </activity>
        <activity
            android:name="com.example.androidhive.Test"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.example.androidhive.Message"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="com.example.androidhive.Messaging"
            android:label="@string/title_activity_messaging" >
        </activity>
        
        <activity
            android:name="com.example.login.MainMenu"
            android:label="Main Menu" >
        </activity>
        
        <activity
            android:name="com.example.login.ScheduledTrips"
            android:label="Scheduled Trips" >
        </activity>
        
        <activity
            android:name="com.example.login.WhereAmI"
            android:label="My Location" >
        </activity>
        <activity android:name="com.facebook.LoginActivity" android:label="@string/app_name"></activity>
    </application>

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>